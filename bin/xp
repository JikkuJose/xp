#! /usr/bin/env ruby

require_relative '../lib/xp'

input = STDIN.read.to_nokogiri

$options = ARGV.select{ |o| o =~ /^\-/ }

def text_flag?
  $options.any?{|o| ["-t", "--text"].include?(o) }
end

query = (ARGV - $options).first

output = input.css(query).map do |element|
  text_flag? ? element.text : element
end

puts output
